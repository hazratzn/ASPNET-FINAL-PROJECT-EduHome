@model List<ProfessionalTeacher>
@{ ViewData["Title"] = "Teacher";
    int count = 1; }
<div class="container mt-3">
    <div class="d-flex justify-content-between">
        <h2>Professional Teacher</h2>
        <a class="btn btn-success" asp-action="Create">Create Teacher</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
    <tr>
        <td>

            @count
        </td>
        <td>
            @teacher.Title
            <span class="text-danger mt-3 @(teacher.IsDelete == true?"d-block":"d-none") " >Deleted</span>

        </td>
        <td>
            <a class="btn btn-warning" asp-action="Update" asp-route-id="@teacher.Id">Edit</a>

            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@teacher.Id">
                <button class="btn btn-danger">Delete</button>
            </form>
            <a class="btn btn-info" asp-action="Detail" asp-route-id="@teacher.Id">Detail</a>
        </td>

    </tr>
count++;
}

            </tbody>
        </table>
    </div>
</div>


