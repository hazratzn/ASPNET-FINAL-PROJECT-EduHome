@model ProfessionalTeacher
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1 class="text-primary">Teacher Detail</h1>
    <hr />
    <h3 class="text-primary mt-3" style="font-weight:bolder;font-family:sans-serif">Title: <span style="color:grey;font-size:20px;font-weight:lighter">@Model.Title</span> </h3>
    <hr />
    
    <h3 class="text-primary mt-3" style="font-weight: bolder; font-family: sans-serif">Description: <span style="color: grey; font-size: 20px; font-weight: lighter">@Model.Description</span> </h3>

    <a asp-action="Index" class="btn btn-outline-primary mt-3">Go back</a>
</div>

