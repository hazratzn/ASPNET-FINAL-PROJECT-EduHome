@model List<Testemonial>
@{
    ViewData["Title"] = "Testimonials";
    int count = 1;

}
<div class="container mt-3">
    <div class="d-flex justify-content-between">
        <h2>Testimonials</h2>
        <a class="btn btn-success" asp-action="Create">Create Testemonial</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var testimonial in Model)
                {
                    <tr>
                        <td>

                            @count
                        </td>
                        <td>
                            <img src="~/assets/img/testimonial/@testimonial.Image" alt="testimonial">

                        </td>
                        <td>
                            @testimonial.Name

                        </td>

                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@testimonial.Id">Edit</a>

                            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@testimonial.Id">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <a class="btn btn-info" asp-action="Detail" asp-route-id="@testimonial.Id">Detail</a>
                        </td>

                    </tr>

                    count++;
                }

            </tbody>
        </table>
    </div>
</div>

