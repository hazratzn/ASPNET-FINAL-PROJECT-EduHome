@model List<Blog>
@{ ViewData["Title"] = "Category";
    int count = 1; }
<div class="container mt-3">
    <div class="d-flex justify-content-between">
        <h2>Blog</h2>
        <a class="btn btn-success" asp-action="Create">Create Blog</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                <tr>
                    <td>

                        @count
                    </td>
                    <td>
                        <img src="~/assets/img/blog/@blog.Image" style="width:100px;height:100px" alt="Alternate Text" />

                    </td>
                    <td>
                       @blog.Title

                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@blog.Id">Edit</a>

                        <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@blog.Id">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <a class="btn btn-info" asp-action="Detail" asp-route-id="@blog.Id">Detail</a>
                    </td>

                </tr>
count++;
}

            </tbody>
        </table>
    </div>
</div>

