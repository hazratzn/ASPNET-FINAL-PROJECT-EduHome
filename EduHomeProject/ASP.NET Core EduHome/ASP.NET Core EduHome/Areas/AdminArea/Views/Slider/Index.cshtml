@model List<Slider>
@{ ViewData["Title"] = "Category";
                int count = 1; }
<div class="container mt-3">
    <div class="d-flex justify-content-between">
        <h2>Categories</h2>
        <a class="btn btn-success" asp-action="Create">Create Slider</a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Settings
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
    <tr>
        <td>

            @count
        </td>
        <td>
            <img src="~/assets/img/slider/@slider.Image" style="width:100px;height:100px" alt="Alternate Text" />

        </td>
        <td>
            <a class="btn btn-warning" asp-action="Update" asp-route-id="@slider.Id">Edit</a>

            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@slider.Id">
                <button class="btn btn-danger">Delete</button>
            </form>
            <a  class="btn btn-info" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
        </td>

    </tr>count++;
                }

            </tbody>
        </table>
    </div>
</div>

